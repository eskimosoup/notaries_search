<%= render 'optimadmin/shared/header/main_title', title: 'Member Monthly Reports' %>

<div class="main-content">
  <div class="row collapse module-list-index header">
    <%= list_item('large-6 small-6'){ 'Date' } %>
    <%= list_item('large-6 small-6'){ 'CSV' } %>
  </div>
  <% @monthly_report_dates.each do |date| %>
    <div class="row collapse module-list-index <%= cycle('odd', 'even') %>" data-equalizer="module-list">

      <div class="large-6 small-6 columns" data-equalizer-watch="module-list">
        <%= l date, format: :month_and_year %>
      </div>

      <div class="large-6 small-6 columns" data-equalizer-watch="module-list">
        <%= link_to "Download CSV", csv_member_monthly_reports_path(month: date.month, year: date.year), target: "_blank" %>
      </div>
    </div>
  <% end %>
</div>